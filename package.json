{
  "name": "@flizpay-de/ui",
  "private": false,
  "version": "0.0.16",
  "sideEffects": [
    "**/*.css"
  ],
  "type": "module",
  "files": [
    "dist",
    "lib"
  ],
  "main": "./dist/@flizpay-de/ui.umd.cjs",
  "module": "./dist/@flizpay-de/ui.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/@flizpay-de/ui.js",
      "types": "./dist/index.d.ts",
      "require": "./dist/@flizpay-de/ui.umd.cjs"
    },
    "./tailwind-base": {
      "import": "./lib/tailwind-base.js",
      "require": "./lib/tailwind-base.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "prebuild": "rm -rf dist",
    "build": "tsc -b && vite build",
    "build:styles": "tailwindcss -i lib/styles/accordion.css -o dist/accordion.css --minify",
    "lint": "eslint .",
    "preview": "vite preview",
    "release": "npm run build && npm publish --access public"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "postcss": "^8.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "vite-plugin-dts": "^4.5.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "@radix-ui/react-accordion": "^1.2.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.503.0",
    "tailwind-merge": "^2.2.0"
  }
}
